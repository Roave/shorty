{
  "name": "shorty",
  "version": "0.5.5",
  "description": "An asynchronous SMPP client and server built on Node.js.",
  "keywords": [
    "smpp",
    "sms"
  ],
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Roave/shorty.git"
  },
  "bugs": {
    "url": "https://github.com/Roave/shorty/issues"
  },
  "directories": {
    "example": "./examples",
    "lib": "./lib"
  },
  "main": "./lib/shorty",
  "author": {
    "name": "Evan Coury",
    "url": "https://github.com/EvanDotPro"
  },
  "maintainers": [
    {
      "name": "Justin Martin",
      "url": "https://github.com/TheFrozenFire"
    }
  ],
  "contributors": [
    {
      "name": "Ben Youngblood",
      "url": "https://github.com/bjyoungblood"
    }
  ],
  "engines": {
    "node": "^6.0"
  },
  "devDependencies": {
    "eslint": "^3.1.1",
    "mocha": "^2.5.3",
    "nyc": "^7.0.0"
  },
  "scripts": {
    "lint": "eslint lib/ test/",
    "test": "npm run-script lint -s && npm run-script test-cov -s",
    "test-cov": "nyc mocha --bail --check-leaks test/"
  },
  "nyc": {
    "all": true,
    "include": ["lib/**/*.js"],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
